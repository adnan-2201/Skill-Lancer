                <div class="home-contents">
                    <div class="main-box-a">

                        <!-- ADD COURSE FROM  -->
                        <div class="pdform-header" style="background-color: #87d5f4;">EDIT COURSE</div>

                        <form action="/update_course" method="post">
                            <div id="profiledisplayform">
                                <div class="left">
                                    <div class="one-input">
                                        <label>Course Name</label><br>
                                        <input name="coursename" type="text" value="<%=values.c_name%>" required>
                                    </div>
                                    <div class="one-input">
                                        <label>Course Description</label><br>
                                        <textarea name="coursedec" value="" required><%=values.c_desc%></textarea>
                                    </div>

                                    <div class="one-input-flex">
                                        <div class="one-input-small">
                                            <label>Course Cost</label><br>
                                            <span class="lbl-icon"
                                                style="margin-left: 1rem;position: absolute;top: 50%;margin-top: 8px;">
                                                <i class="fa-solid fa-indian-rupee-sign"></i>
                                            </span>
                                            <input name="coursecost" class="lbl-icon-align"
                                                style="padding: 12px 15px 12px 30px;" type="number" value="<%=values.c_cost%>" required>
                                        </div>
                                        <div class="one-input-small">
                                            <label>Cost Type</label><br>
                                            <select required name="coursecosttype">
                                                <option value="<%=values.cost_type%>">-select-</option>
                                                <option value="hourly">Per Hour</option>
                                                <option value="full course">For Full Course</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="right">
                                    <div class="one-input">
                                        <label>Course Sector / Field</label><br>
                                        <select required name="coursefield">
                                            <option value="<%=values.field%>">-select-</option>
                                            <option value="IT">IT</option>
                                            <option value="Arts">Arts</option>
                                            <option value=Medicine"">Medicine</option>
                                            <option value="Business/Administration">Business / Administration</option>
                                            <option value="Marketing">Marketing</option>
                                            <option value="Others">Others</option>
                                        </select>
                                    </div>

                                    <div class="one-input">
                                        <label>Course Lessons / Chapters</label><br>
                                        <textarea name="courseagenda"
                                            placeholder="Each Lesson is seperated by comma(,) &#10;Example: Thermodynamics, Waves, Sound Optics"
                                            value="" required><%=values.c_lesson%></textarea>
                                    </div>

                                    <div class="one-input">
                                        <label>Do you provide DEMO classes?</label><br>
                                        <select required name="coursedemoclass">
                                            <option value="<%=values.demo%>">-select-</option>
                                            <option value="Yes">YES</option>
                                            <option value="No">NO</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="one-input" style="padding-bottom: 1em;display: flex;">
                                <input type="submit" style="width: 100%;display: block;width: 65%;"
                                    value="Save Changes">

                                <input type="submit"
                                    style="width: 80%;display: block;width: 35%;margin-left: 1rem;background-color: tomato;border: none;"
                                    value="Delete Course">
                            </div>

                        </form>
