                <div class="home-contents">
                    <div class="main-box-a">

                        <!-- PERSONAL DETAILS FROM  -->
                        <div class="pdform-header">Personal Details</div>

                        <form action="" id="profiledisplayform" method="post">
                            <div class="left">
                                <div class="one-input">
                                    <label>Name</label><br>
                                    <input name="tname" type="text" value="<%=sname%>" required>
                                </div>
                                <div class="one-input">
                                    <label>Phone</label><br>
                                    <input name="tmob" type="number" value="<%=mobile%>" required>
                                </div>
                                <div class="one-input">
                                    <label>Email ID</label><br>
                                    <input name="tmail" type="email" value="<%=email%>" required>
                                </div>
                                <div class="one-input">
                                    <label>Gender</label><br>
                                    <select required name="tgender">
                                        <option value="Male" selected>Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <div class="one-input">
                                    <label>Date of Birth</label><br>
                                    <input name="tdob" type="date" value="<%=dob%>" required>
                                </div>
                            </div>

                            <div class="right">
                                <div class="one-input">
                                    <label style="display: block;">Profile Photo</label>
                                    <label for="tpphoto">Select Image from Device</label>
                                    <input type="file" id="tpphoto" name="tprofileimg"
                                        accept="image/png, image/jpg, image/jpeg">
                                    <span id="tpprofile-preview"></span>
                                    <script>
                                        // Uploaded-image-display
                                        const imageinput = document.querySelector("#tpphoto");
                                        var uploaded_image;

                                        imageinput.addEventListener('change', function () {
                                            const reader = new FileReader();
                                            reader.addEventListener('load', () => {
                                                uploaded_image = reader.result;
                                                document.querySelector("#tpprofile-preview").style.backgroundImage = `url(${uploaded_image})`;
                                            });
                                            reader.readAsDataURL(this.files[0]);
                                        });
                                    </script>
                                </div>

                                <div class="one-input">
                                    <label>Are you a Student?</label><br>
                                    <select required name="studentyn">
                                        <option value="#">-Select</option>
                                        <option value="Student">Student</option>
                                        <option value="non-student">Not a Student</option>
                                    </select>
                                </div>

                                <div class="one-input">
                                    <label> Current Profession</label><br>
                                    <input name="profession" value="<%=profession%>" placeholder="Example: Graduate , 10th class CBSE, Manager etc.," required>
                                </div>

                                <div class="one-input">
                                    <label>Interested Sector / Field</label><br>
                                    <select required name="interestedfield">
                                        <option value="">-select-</option>
                                        <option value="IT">IT</option>
                                        <option value="Arts">Arts</option>
                                        <option value=Medicine"">Medicine</option>
                                        <option value="Business/Administration">Business / Administration</option>
                                        <option value="Marketing">Marketing</option>
                                        <option value="Others">Others</option>
                                    </select>
                                </div>


                                <div class="one-input">
                                    <input type="submit" value="Update Profile">
                                    <a href="#">Change Password</a>
                                </div>
                            </div>
                        </form><br>


